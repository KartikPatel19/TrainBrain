<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#CFD8DC"
                android:orientation="vertical">

    <TextView
        android:id="@+id/indexTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="99"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indexTV"
        android:padding="5dp"
        android:text="99999"
        android:textSize="15sp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/indexTV">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/blackvender"/>

        <TextView
            android:id="@+id/scharr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView1"
            android:layout_alignLeft="@id/imageView1"
            android:layout_alignRight="@id/imageView1"
            android:layout_alignTop="@id/imageView1"
            android:gravity="center"
            android:text="Start Point"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/blackvender"/>

        <TextView
            android:id="@+id/schdep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView2"
            android:layout_alignLeft="@id/imageView2"
            android:layout_alignRight="@id/imageView2"
            android:layout_alignTop="@id/imageView2"
            android:gravity="center"
            android:text="End Point"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/nameOfTheStation"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:text="Ankleshwar Super Fast Express"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/stateLayoutTV"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginRight="5dp"
        android:text="Gujrat"/>

</RelativeLayout>