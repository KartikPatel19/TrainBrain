<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.deucat.kartik.trainbrain.MainActivity">

    <Button
        android:id="@+id/trainRouteActivity"
        android:onClick="openRouteIntent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="train route"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:layout_marginBottom="2dp"/>

    <Button
        android:id="@+id/pnrActivityOpen"
        android:onClick="openPnrIntent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="PNR"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:background="#66BB6A"
        android:layout_marginBottom="2dp"/>
    <Button
        android:id="@+id/liveTrainActivityOpen"
        android:onClick="openLiveTrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Live train"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:background="#81C784"/>


</LinearLayout>
