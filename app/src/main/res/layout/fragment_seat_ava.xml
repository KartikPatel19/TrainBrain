<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deucat.kartik.trainbrain.SeatAvaFragment">

    <EditText
        android:id="@+id/SeatTrainNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Train Number"
        android:inputType="number" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner"
        android:layout_toEndOf="@+id/SeatTrainNumber" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autoCompleteTextView"
        android:layout_alignBottom="@+id/autoCompleteTextView"
        android:layout_toEndOf="@+id/autoCompleteTextView"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button2"
        android:layout_below="@+id/button2" />


</RelativeLayout>
